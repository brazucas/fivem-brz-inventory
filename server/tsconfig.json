{
  "compilerOptions": {
    "target": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "module": "CommonJS",
    "types": ["@citizenfx/server", "@types/node", "@types/jest"],
    "lib": ["ES2020"],
    "paths": {
      "@common/*": ["../common/*"],
      "@core/*": ["../brz-core/server/*"],
      "@/*": ["./*"]
    }
  },
  "include": ["./**/*", "../brz-core/server", "../common/**/*"]
}
