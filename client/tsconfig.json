{
  "compilerOptions": {
    "target": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "module": "CommonJS",
    "types": ["@citizenfx/client", "@types/node", "@types/jest"],
    "lib": ["ES2020"],
    "paths": {
      "@/*": ["./*"],
      "@core/*": ["../brz-core/client/*"],
      "@common/*": ["../common/*"]
    }
  },
  "include": [
    "./**/*",
    "../brz-core/client",
    "../brz-core/nodejs.ts",
    "../common/**/*"
  ]
}
